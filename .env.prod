# Production Environment Configuration for SecureScan Framework

# Database Configuration
POSTGRES_DB=securescan
POSTGRES_USER=securescan
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_MAX_CONNECTIONS=1000
API_KEEP_ALIVE=2

# CORS Configuration
CORS_ORIGINS=["https://securescan.yourdomain.com","https://api.securescan.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Frontend URLs
FRONTEND_API_URL=https://api.securescan.yourdomain.com
FRONTEND_WS_URL=wss://api.securescan.yourdomain.com/ws

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/securescan.crt
SSL_KEY_PATH=/etc/ssl/private/securescan.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt
ENABLE_SSL=true

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
ENABLE_CSRF_PROTECTION=true
SECURE_COOKIES=true
COOKIE_SAMESITE=strict

# Scanner Configuration
SCANNER_TIMEOUT=600
MAX_CONCURRENT_SCANS=5
SCANNER_MEMORY_LIMIT=2048
SCANNER_CPU_LIMIT=1.0
ENABLE_SCANNER_CACHE=true
SCANNER_CACHE_TTL=3600

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_API_VERSION=auto
DOCKER_NETWORK=securescan-network
DOCKER_REGISTRY=docker.io

# File Upload Configuration
MAX_FILE_SIZE=1073741824
UPLOAD_DIR=/app/uploads
ALLOWED_EXTENSIONS=[".zip",".tar.gz",".git"]
SCAN_RESULTS_DIR=/app/scan_results
ENABLE_FILE_VIRUS_SCAN=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/securescan/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_FILE=/var/log/securescan/audit.log

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9000
PROMETHEUS_ENDPOINT=/metrics
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Sentry Configuration (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
FRONTEND_SENTRY_DSN=https://your-frontend-sentry-dsn-here@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_TLS=true
FROM_EMAIL=SecureScan <noreply@yourdomain.com>

# Webhook Configuration
ENABLE_WEBHOOKS=true
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30

# Cache Configuration
ENABLE_REDIS_CACHE=true
CACHE_TTL=3600
CACHE_MAX_ENTRIES=10000

# Session Configuration
SESSION_TIMEOUT=7200
SESSION_CLEANUP_INTERVAL=3600
ENABLE_SESSION_PERSISTENCE=true

# API Keys Configuration
API_KEY_LENGTH=32
API_KEY_PREFIX=ss_
ENABLE_API_KEY_ROTATION=true
API_KEY_ROTATION_DAYS=90

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_API_VERSIONING=true

# Compliance Configuration
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_TRAIL=true
DATA_RETENTION_DAYS=365
ENABLE_DATA_ENCRYPTION=true

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
ENABLE_TEAMS_NOTIFICATIONS=false
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/your-webhook-url

# Integration Configuration
ENABLE_JIRA_INTEGRATION=false
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token

ENABLE_GITHUB_INTEGRATION=false
GITHUB_TOKEN=your_github_token
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# CI/CD Integration
ENABLE_JENKINS_INTEGRATION=false
JENKINS_URL=https://jenkins.yourdomain.com
JENKINS_USER=your_jenkins_user
JENKINS_TOKEN=your_jenkins_token

# Container Registry Configuration
CONTAINER_REGISTRY_URL=registry.yourdomain.com
CONTAINER_REGISTRY_USERNAME=your_registry_username
CONTAINER_REGISTRY_PASSWORD=your_registry_password

# Kubernetes Configuration (if deploying to K8s)
KUBERNETES_NAMESPACE=securescan
KUBERNETES_CONFIG_PATH=/etc/kubernetes/config
ENABLE_KUBERNETES_DEPLOYMENT=false

# Load Balancer Configuration
ENABLE_LOAD_BALANCER=true
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5

# Geographic Configuration
TIMEZONE=UTC
LOCALE=en_US.UTF-8
CURRENCY=USD

# Development/Debug (should be false in production)
DEBUG=false
TESTING=false
ENABLE_CORS_DEBUG=false
ENABLE_SQL_DEBUG=false