{
  "name": "securescan-cli",
  "version": "1.0.0",
  "description": "SecureScan Framework CLI - Command-line interface for security scanning",
  "author": "SecureScan Team",
  "license": "MIT",
  "homepage": "https://securescan.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/securescan/framework.git",
    "directory": "cli"
  },
  "keywords": [
    "security",
    "scanning",
    "vulnerability",
    "cli",
    "sast",
    "dast",
    "sca",
    "iac",
    "secrets",
    "devsecops"
  ],
  "main": "dist/index.js",
  "bin": {
    "securescan": "dist/bin/securescan.js",
    "ss": "dist/bin/securescan.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/bin/securescan.js",
    "dev": "ts-node src/bin/securescan.ts",
    "watch": "tsc -w",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "publish:npm": "npm run build && npm publish",
    "publish:docker": "docker build -t securescan/cli .",
    "docs": "typedoc src --out docs"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "cosmiconfig": "^8.3.6",
    "dotenv": "^16.3.1",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "figures": "^6.0.1",
    "fs-extra": "^11.1.1",
    "globby": "^14.0.0",
    "listr2": "^7.0.2",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "table": "^6.8.1",
    "terminal-link": "^3.0.0",
    "update-notifier": "^7.0.0",
    "yaml": "^2.3.4",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/semver": "^7.5.6",
    "@types/update-notifier": "^6.0.8",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/bin/**"
    ]
  }
}