# Test Configuration for SecureScan Framework

# Database Configuration for Testing
DATABASE_URL=postgresql://test:test@localhost:5433/securescan_test
DATABASE_TEST_URL=postgresql://test:test@localhost:5433/securescan_test

# Redis Configuration for Testing
REDIS_URL=redis://localhost:6380
REDIS_TEST_URL=redis://localhost:6380

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_BASE_URL=http://localhost:8001
API_TEST_URL=http://localhost:8001
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# CLI Configuration
CLI_CONFIG_DIR=./.securescan-test
CLI_LOG_LEVEL=debug

# Scanner Configuration
SCANNER_TIMEOUT=300
SCANNER_MAX_CONCURRENT=2
DOCKER_HOST=unix:///var/run/docker.sock

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=./test-uploads
ALLOWED_EXTENSIONS=[".zip", ".tar.gz", ".git"]

# Rate Limiting (Disabled for Testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/test.log

# Feature Flags for Testing
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_METRICS_COLLECTION=false

# Mock Configuration
MOCK_EXTERNAL_APIS=true
MOCK_SCANNER_EXECUTION=false
MOCK_FILE_OPERATIONS=false

# Test Data Configuration
TEST_PROJECT_NAME=test-project
TEST_USER_EMAIL=test@example.com
TEST_API_KEY=test_api_key_123

# Performance Testing
LOAD_TEST_CONCURRENT_USERS=10
LOAD_TEST_DURATION_SECONDS=60
STRESS_TEST_MAX_REQUESTS=1000

# Security Testing
SECURITY_TEST_ENABLED=true
VULNERABILITY_TEST_PATTERNS=true
PENETRATION_TEST_MODE=false